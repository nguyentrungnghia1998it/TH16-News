<div class="col-lg-6 col-md-12 col-sm-6 blog-masonry-box">
  <div class="type-post">
    <div class="entry-cover">
      <div class="post-meta">
        <span class="byline">by <a href="#" title="{{post.creator}}">{{post.creator}}</a></span>
        <span class="post-date"><a href="#">{{formatDate post.created_at}}</a></span>
      </div>
      <a href="/post/{{post_id}}"><img src="{{post.thumb}}" alt="Post" /></a>
    </div>
    <div class="entry-content">
      <div class="entry-header">	
        <h3 class="entry-title"><a href="/post/{{post_id}}" title="{{post.name}}">{{post.name}}</a></h3>
      </div>								
      <p>{{post.short_description}}</p>
      <a href="/post/{{post_id}}" title="Read More">Read More</a>
    </div>
  </div>
</div>