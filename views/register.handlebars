            <div class="login-or">
              <hr class="hr-or">
              <span class="span-or">or</span>
            </div>
            <form id="register-form" action="/register" method="post">
              <div class="form-group">
                <label for="inputUsernameEmail">Name</label>
                <input type="text" name="name" class="form-control" id="name" required>
              </div>
              <div class="form-group">
                <label for="inputUsernameEmail">Role</label>
                <select class="form-input" name="role" id="user-role" onchange="onSelectRole()">
                  <option value="guest">Khách</option>
                  <option value="subscriber">Đọc giả</option>
                  <option value="writer">Phóng viên</option>
                  <option value="editor">Biên tập viên</option>
                  <option value="admin">Admin</option>
                </select>
                <div class="col-12 mt-3" id="warning-message" style="display: none;">
                  <small class="text-warning">
                    If you select this role, you must waiting for approval from admin, to visit dashboard page.
                  </small>
                </div>
              </div>

              <div class="form-group">
                <label for="inputUsernameEmail">Email</label>
                <small class="text-danger ml-auto hide" id="email_invalid">*Email invalid</small>
                <input type="text" name="email" class="form-control" id="email" required>
              </div>
              <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" class="form-control" id="password" required>
              </div>
              <div class="d-flex ">
                <a class="" href="/login">
                  <i class="fa fa-long-arrow-left ml-2 " aria-hidden="true"></i>
                  Back to Login
                </a>
                <button type="submit" class="btn btn btn-primary ml-auto" id="submit" disabled>
                  <span class="mt-2" style="color:white;">Register</span>
                </button>
              </div>

            </form>
          </div>

        </div>
      </div>

    </div>
