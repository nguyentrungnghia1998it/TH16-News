									<a class="page-numbers" href="#"><span class="meta-nav screen-reader-text">Page </span>6</a>
									<a class="next page-numbers" href="#">Next</a>
								</div>
							</nav><!-- Pagination /- -->
						</div><!-- Content Area /- -->
						<!-- Widget Area -->
						<div class="col-lg-4 col-md-6 widget-area">
							<!-- Widget : Latest Post -->
							<aside class="widget widget_latestposts">
								<h3 class="widget-title">Popular Posts</h3>
                	{{#each posts}}
                    <div class="latest-content 
                    {{#ifCond  @index '>' 4}}
                      hidden
                   {{/ifCond }}">
                      <a href="#" title="Recent Posts"><i><img src="{{thumb}}" class="wp-post-image" alt="blog-1" /></i></a>
                      <h5><a title="{{name}}" href="#">{{name}}</a></h5>
                        
                      <span><a href="#">{{formatDate created_at}}</a></span>
                
                    </div>
                {{/each}}
