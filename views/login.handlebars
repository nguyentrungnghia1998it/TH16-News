<div id="particles-js">
  <div class="lock-wrapper">
    <div class="row">
      <div class="col-xs-12">
        <div class="lock-box glass">
          <div class="main">
            <h3 id="page-title">Please Log In, or <a href="#" onclick="changePage()">Sign Up</a></h3>
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <a href="/login/fb" class="btn btn-lg btn-primary btn-block">Facebook</a>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <a href="#" class="btn btn-lg btn-info btn-block">Google</a>
              </div>
            </div>
            <div class="login-or">
              <hr class="hr-or">
              <span class="span-or">or</span>
            </div>
            <form class="show-form" id="login-form" action="/login" method="post">
              <div class="form-group">
                <label for="inputUsernameEmail">Email</label>
                <small class="text-danger ml-auto hide" id="email_invalid_login">*Email invalid</small>
                <input type="text" name="email" class="form-control" id="emailLogin" required> 
              </div>
              <div class="form-group">
                <label for="inputPassword">Password</label>
                <a class="ml-auto" href="#">Forgot password?</a>
                <input type="password" name="password" class="form-control" id="passwordLogin" required>
              </div>
              <div class="d-flex mt-3">
                <div class="pad-btm">
                  <div class="checkbox">
                    <label class="form-checkbox form-icon form-text">
                      <input type="checkbox"> Remember Me
                    </label>
                  </div>
                </div>
                <button type="submit" class="btn btn btn-primary ml-auto" id="submit_login" disabled>
                  <span style="color:white;">Log In</span>
                </button>
              </div>

            </form>
            <form class="hide-form" id="register-form" action="/register" method="post">
              <div class="form-group">
                <label for="inputUsernameEmail">Name</label>
                <input type="text" name="name" class="form-control" id="nameRegister" required>
              </div>
              <div class="form-group">
                <label for="inputUsernameEmail">Email</label>
                <small class="text-danger ml-auto hide" id="email_invalid_register">*Email invalid</small>
                <input type="text" name="email" class="form-control" id="emailRegister" required>
              </div>
              <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" class="form-control" id="passwordRegister" required>
              </div>
              <div class="d-flex ">
                <a class="" href="#" onclick="changePage()">
                  <i class="fa fa-long-arrow-left ml-2 " aria-hidden="true"></i>
                  Back to Login
                </a>
                <button type="submit" class="btn btn btn-primary ml-auto" id="submit_register" disabled>
                <span class="mt-2" style="color:white;">Register</span>
                </button>
              </div>
              
            </form>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>